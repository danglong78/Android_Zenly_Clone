<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_nav"
    app:startDestination="@id/chatListFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="UI.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_friendProfileFragment"
            app:destination="@id/friendProfileFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom"
            app:popEnterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"
            app:popUpTo="@id/chatListFragment" />
        <action
            android:id="@+id/action_chatFragment_to_strangerProfileFragment"
            app:destination="@id/strangerProfileFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom"
            app:popEnterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"
            app:popUpTo="@id/chatListFragment"/>
    </fragment>
    <fragment
        android:id="@+id/chatListFragment"
        android:name="UI.chat.ChatListFragment"
        android:label="fragment_chat_list"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_chatListFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:launchSingleTop="true"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom"
            app:popEnterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"/>
        <action
            android:id="@+id/action_chatListFragment_to_searchChatFragment"
            app:destination="@id/searchChatFragment"
            app:launchSingleTop="true"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom"
            app:popEnterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"/>
    </fragment>
    <fragment
        android:id="@+id/searchChatFragment"
        android:name="UI.chat.SearchChatFragment"
        android:label="SearchChatFragment" >
        <action
            android:id="@+id/action_searchChatFragment_to_chatFragment2"
            app:destination="@id/chatFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/chatListFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom"
            app:popEnterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"/>
    </fragment>
    <fragment
        android:id="@+id/friendProfileFragment"
        android:name="UI.friend.FriendProfileFragment"
        android:label="fragment_friend_profile"
        tools:layout="@layout/fragment_friend_profile"
        app:enterAnim="@anim/slide_in_bottom"
        app:exitAnim="@anim/slide_out_bottom"
        app:popEnterAnim="@anim/slide_in_bottom"
        app:popExitAnim="@anim/slide_out_bottom">
        <action
            android:id="@+id/action_friendProfileFragment2_to_strangerProfileFragment2"
            app:destination="@id/strangerProfileFragment"
            app:popUpTo="@id/friendProfileFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/strangerProfileFragment"
        android:name="UI.friend.StrangerProfileFragment"
        android:label="fragment_stranger_profile"
        tools:layout="@layout/fragment_stranger_profile"
        app:enterAnim="@anim/slide_in_bottom"
        app:exitAnim="@anim/slide_out_bottom"
        app:popEnterAnim="@anim/slide_in_bottom"
        app:popExitAnim="@anim/slide_out_bottom">
        <action
            android:id="@+id/action_strangerProfileFragment2_to_friendProfileFragment2"
            app:destination="@id/friendProfileFragment"
            app:popUpTo="@id/strangerProfileFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>