<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:id="@+id/fragment_denied"
    tools:context="UI.RequestPermission.DeniedFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/requestPermissionTextView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="FOR ZENLY TO WORK, CHANGE YOUR LOCATION SETTINGS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346" />

    <TextView
        android:id="@+id/requestPermissionDescribeTextView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="YOUR CURRENT LOCATION SETTINGS DO NOT ALLOW ZENLY TO WORK PROPERLY"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/requestPermissionTextView"
        app:layout_constraintStart_toStartOf="@+id/requestPermissionTextView"
        app:layout_constraintTop_toBottomOf="@+id/requestPermissionTextView" />

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cornerRadius="15dp"
        android:text="CHANGE LOCATION SETTINGS"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/requestPermissionDescribeTextView"
        app:layout_constraintStart_toStartOf="@+id/requestPermissionDescribeTextView"
        app:layout_constraintTop_toBottomOf="@+id/requestPermissionDescribeTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>